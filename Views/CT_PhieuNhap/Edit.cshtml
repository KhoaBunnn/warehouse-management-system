@model QLKhoHang.Models.CT_PhieuNhap

@{
    ViewData["Title"] = "Sửa chi tiết phiếu nhập";
}

<div class="card p-4 shadow">
    <h3 class="mb-3 text-primary">Sửa Chi Tiết Phiếu Nhập</h3>

    <form asp-action="Edit" method="post">

        <div class="mb-3">
            <label class="form-label">Mã Phiếu Nhập</label>
            <input asp-for="MaPN" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Hàng Hóa</label>
            <select class="form-control" disabled>
                @foreach (var item in ViewBag.HangHoa)
                {
                    if (item.MaHang == Model.MaHang)
                    {
                        <option value="@item.MaHang" selected="selected">
                            @item.TenHang (@item.MaHang)
                        </option>
                    }
                    else
                    {
                        <option value="@item.MaHang">
                            @item.TenHang (@item.MaHang)
                        </option>
                    }
                }
            </select>

            <!-- gửi lại giá trị -->
            <input type="hidden" asp-for="MaHang" />
        </div>

        <div class="mb-3">
            <label class="form-label">Số lượng</label>
            <input asp-for="SoLuong" class="form-control" type="number" min="1" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Đơn giá nhập</label>
            <input asp-for="DonGiaNhap" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Details" asp-controller="PhieuNhap" asp-route-id="@Model.MaPN" class="btn btn-secondary">
            Quay lại
        </a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
