@model QLKhoHang.Models.CT_PhieuNhap
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Nhập chi tiết phiếu: @ViewBag.MaPN</h2>

<form asp-action="Create" method="post">

    <!-- HIỂN THỊ TẤT CẢ LỖI TRẢ VỀ TỪ CONTROLLER -->
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <input type="hidden" asp-for="MaPN" value="@ViewBag.MaPN" />

    <div class="form-group mb-2">
        <label>Hàng hóa</label>
        <select asp-for="MaHang" class="form-control" required>
            <option value="">-- Chọn hàng --</option>
            @foreach (var hh in ViewBag.HangHoa)
            {
                <option value="@hh.MaHang">@hh.TenHang</option>
            }
        </select>
        <span asp-validation-for="MaHang" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Số lượng</label>
        <input asp-for="SoLuong" type="number" class="form-control" min="1" required />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Đơn giá nhập</label>
        <input asp-for="DonGiaNhap" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Lưu</button>

    <a asp-controller="PhieuNhap"
       asp-action="Details"
       asp-route-id="@ViewBag.MaPN"
       class="btn btn-secondary mt-2">
        Quay lại
    </a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
