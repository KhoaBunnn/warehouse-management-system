@model QLKhoHang.Models.Kho

@{
    ViewData["Title"] = "Sửa kho";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaKho" />

    <div class="form-group mb-3">
        <label asp-for="TenKho"></label>
        <input asp-for="TenKho" class="form-control" />
        <span asp-validation-for="TenKho" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DiaChiKho"></label>
        <input asp-for="DiaChiKho" class="form-control" />
        <span asp-validation-for="DiaChiKho" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
