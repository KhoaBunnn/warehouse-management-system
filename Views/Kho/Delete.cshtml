@model QLKhoHang.Models.Kho

@{
    ViewData["Title"] = "Xóa kho";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa kho này không?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã Kho</dt>
        <dd class="col-sm-10">@Model.MaKho</dd>

        <dt class="col-sm-2">Tên Kho</dt>
        <dd class="col-sm-10">@Model.TenKho</dd>

        <dt class="col-sm-2">Địa chỉ Kho</dt>
        <dd class="col-sm-10">@Model.DiaChiKho</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaKho" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
