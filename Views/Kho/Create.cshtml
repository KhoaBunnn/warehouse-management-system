@model QLKhoHang.Models.Kho

@{
    ViewData["Title"] = "Tạo kho mới";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-box-seam"></i> Tạo kho mới</h2>
    <p class="subtitle">Thêm kho hàng mới vào hệ thống</p>
</div>

<div class="form-modern card-glass">
    <div class="form-header">
        <h3><i class="bi bi-building text-primary"></i> Thông tin kho hàng</h3>
        <p class="subtitle">Điền đầy đủ thông tin để tạo kho mới</p>
    </div>

    <form asp-action="Create" method="post" id="createForm">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-section">
            <div class="form-section-title">
                <i class="bi bi-info-circle"></i>
                <span>Thông tin cơ bản</span>
            </div>

            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="TenKho" class="form-label required">
                        <i class="bi bi-tag"></i>
                        Tên kho
                    </label>
                    <input asp-for="TenKho" class="form-control" placeholder="Nhập tên kho..." />
                    <span asp-validation-for="TenKho" class="field-validation-error"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="DiaChiKho" class="form-label">
                        <i class="bi bi-geo-alt"></i>
                        Địa chỉ kho
                    </label>
                    <input asp-for="DiaChiKho" class="form-control" placeholder="Nhập địa chỉ kho..." />
                    <span asp-validation-for="DiaChiKho" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary btn-modern">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-primary btn-modern" id="submitBtn">
                <i class="bi bi-check-lg me-2"></i>Lưu kho
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('createForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('submitBtn');
            btn.classList.add('btn-loading');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';
        });
    </script>
}
