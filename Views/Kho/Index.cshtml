@model IEnumerable<QLKhoHang.Models.Kho>

@{
    ViewData["Title"] = "Danh sách Kho";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-box-seam"></i> Danh sách Kho</h2>
    <p class="subtitle">Quản lý các kho hàng trong hệ thống</p>
</div>

<div class="card-glass metric-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0 fw-bold">Kho hàng</h5>
            <div class="text-muted small">Tổng số: @Model.Count() kho</div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Thêm Kho
        </a>
    </div>

    <div class="table-responsive">
        <table class="table-modern table table-hover mb-0">
            <thead>
                <tr>
                    <th class="text-center">Mã Kho</th>
                    <th>Tên Kho</th>
                    <th>Địa chỉ</th>
                    <th class="text-center" width="150">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.MaKho</span>
                            </td>
                            <td>
                                <i class="bi bi-box-seam text-muted"></i>
                                <strong>@item.TenKho</strong>
                            </td>
                            <td>
                                <i class="bi bi-geo-alt text-muted"></i>
                                @item.DiaChiKho
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.MaKho" 
                                       class="btn btn-sm btn-warning btn-animated" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaKho" 
                                       class="btn btn-sm btn-danger btn-animated" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa kho @item.TenKho không?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-3">Chưa có kho nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
