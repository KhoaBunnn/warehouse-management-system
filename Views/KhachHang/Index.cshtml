@model IEnumerable<QLKhoHang.Models.KhachHang>

<h2>Danh sách Khách Hàng</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Thêm khách hàng</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã KH</th>
            <th>Tên KH</th>
            <th>SDT</th>
            <th>Địa chỉ</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kh in Model)
        {
            <tr>
                <td>@kh.MaKH</td>
                <td>@kh.TenKH</td>
                <td>@kh.SDT</td>
                <td>@kh.DiaChi</td>
                <td>
                    <a asp-action="Details" asp-route-id="@kh.MaKH" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@kh.MaKH" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@kh.MaKH" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
