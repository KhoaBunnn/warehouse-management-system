@model QLKhoHang.Models.NhanVien

<h2>Xóa nhân viên</h2>

<div class="alert alert-danger">
    <p>Bạn có chắc muốn xóa nhân viên này?</p>
</div>

<div class="card p-3">
    <p><strong>Mã nhân viên:</strong> @Model.MaNV</p>
    <p><strong>Tên nhân viên:</strong> @Model.TenNV</p>
    <p><strong>SĐT:</strong> @Model.SDT</p>
    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
</div>

<br />

<form method="post">
    <button class="btn btn-danger" type="submit">Xóa</button>
    <a class="btn btn-secondary" href="/NhanVien">Hủy</a>
</form>
