@model QLKhoHang.Models.NhanVien

@{
    ViewData["Title"] = "Thêm nhân viên";
}

<h2>Thêm nhân viên</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Create">
            @Html.AntiForgeryToken()

            <!-- Hidden input để giữ MaNV -->
            <input type="hidden" asp-for="MaNV" value="@Model.MaNV" />

            <!-- Display validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="form-label">Mã nhân viên</label>
                <input class="form-control" value="@Model.MaNV" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Tên nhân viên <span class="text-danger">*</span></label>
                <input class="form-control" asp-for="TenNV" />
                <span class="text-danger" asp-validation-for="TenNV"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">SĐT</label>
                <input class="form-control" asp-for="SDT" />
                <span class="text-danger" asp-validation-for="SDT"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Địa chỉ</label>
                <textarea class="form-control" asp-for="DiaChi" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="DiaChi"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}