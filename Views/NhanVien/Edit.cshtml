@model QLKhoHang.Models.NhanVien

<h2>Sửa nhân viên</h2>

<form method="post">
    <div class="form-group">
        <label>Mã nhân viên</label>
        <input class="form-control" asp-for="MaNV" readonly />
    </div>

    <div class="form-group">
        <label>Tên nhân viên</label>
        <input class="form-control" asp-for="TenNV" />
        <span asp-validation-for="TenNV" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>SĐT</label>
        <input class="form-control" asp-for="SDT" />
        <span asp-validation-for="SDT" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input class="form-control" asp-for="DiaChi" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a class="btn btn-secondary" href="/NhanVien">Hủy</a>
</form>
