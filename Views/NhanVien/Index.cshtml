@model IEnumerable<QLKhoHang.Models.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-people"></i> Danh sách nhân viên</h2>
    <p class="subtitle">Quản lý thông tin nhân viên trong hệ thống</p>
</div>

<div class="card-glass metric-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0 fw-bold">Nhân viên</h5>
            <div class="text-muted small">Tổng số: @Model.Count() nhân viên</div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-person-plus me-2"></i>Thêm nhân viên
        </a>
    </div>

    <div class="table-responsive">
        <table class="table-modern table table-hover mb-0">
            <thead>
                <tr>
                    <th class="text-center">Mã NV</th>
                    <th>Tên NV</th>
                    <th>SĐT</th>
                    <th>Địa chỉ</th>
                    <th class="text-center" width="200">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var nv in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-primary">@nv.MaNV</span>
                            </td>
                            <td>
                                <i class="bi bi-person text-muted"></i>
                                <strong>@nv.TenNV</strong>
                            </td>
                            <td>
                                <i class="bi bi-telephone text-muted"></i>
                                @nv.SDT
                            </td>
                            <td>
                                <i class="bi bi-geo-alt text-muted"></i>
                                @nv.DiaChi
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@nv.MaNV" 
                                       class="btn btn-sm btn-info btn-animated" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@nv.MaNV" 
                                       class="btn btn-sm btn-warning btn-animated" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@nv.MaNV" 
                                       class="btn btn-sm btn-danger btn-animated" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa nhân viên @nv.TenNV không?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-3">Chưa có nhân viên nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
