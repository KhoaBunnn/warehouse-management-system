@model IEnumerable<QLKhoHang.Models.PhieuNhap>

@{
    ViewData["Title"] = "Danh sách Phiếu Nhập";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-arrow-down-square"></i> Danh sách Phiếu Nhập</h2>
    <p class="subtitle">Quản lý các phiếu nhập hàng vào kho</p>
</div>

<div class="card-glass metric-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0 fw-bold">Phiếu nhập</h5>
            <div class="text-muted small">Tổng số: @Model.Count() phiếu</div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Tạo Phiếu Nhập
        </a>
    </div>

    <div class="table-responsive">
        <table class="table-modern table table-hover mb-0">
            <thead>
                <tr>
                    <th class="text-center">Mã PN</th>
                    <th>Ngày nhập</th>
                    <th>Nhân viên</th>
                    <th>Nhà cung cấp</th>
                    <th class="text-center" width="200">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model.OrderByDescending(x => x.NgayNhap))
                    {
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.MaPN</span>
                            </td>
                            <td>
                                <i class="bi bi-calendar3 text-muted"></i>
                                @item.NgayNhap.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <i class="bi bi-person text-muted"></i>
                                @item.NhanVien?.TenNV
                            </td>
                            <td>
                                <i class="bi bi-building text-muted"></i>
                                @item.NhaCungCap?.TenNCC
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.MaPN" 
                                       class="btn btn-sm btn-info btn-animated" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaPN" 
                                       class="btn btn-sm btn-warning btn-animated" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaPN" 
                                       class="btn btn-sm btn-danger btn-animated" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa @item.MaPN không?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-3">Chưa có phiếu nhập nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
