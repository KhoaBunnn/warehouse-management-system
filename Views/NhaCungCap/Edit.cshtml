@model QLKhoHang.Models.NhaCungCap

<h2>Sửa nhà cung cấp</h2>

<form method="post">
    <div class="form-group">
        <label>Mã NCC</label>
        <input class="form-control" asp-for="MaNCC" readonly />
    </div>

    <div class="form-group">
        <label>Tên nhà cung cấp</label>
        <input class="form-control" asp-for="TenNCC" />
        <span class="text-danger" asp-validation-for="TenNCC"></span>
    </div>

    <div class="form-group">
        <label>SĐT</label>
        <input class="form-control" asp-for="SDT" />
        <span class="text-danger" asp-validation-for="SDT"></span>
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input class="form-control" asp-for="DiaChi" />
        <span class="text-danger" asp-validation-for="DiaChi"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="/NhaCungCap" class="btn btn-secondary">Hủy</a>
</form>
