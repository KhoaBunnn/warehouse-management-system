@model QLKhoHang.Models.LoaiHangCreateViewModel

@{
    ViewData["Title"] = "Thêm loại hàng hóa";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenLoai"></label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
