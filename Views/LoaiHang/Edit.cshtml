@model QLKhoHang.Models.LoaiHangEditViewModel

@{
    ViewData["Title"] = "Sửa loại hàng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="MaLoai" class="form-label"></label>
        <input asp-for="MaLoai" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TenLoai" class="form-label"></label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
