@model IEnumerable<QLKhoHang.Models.LoaiHang>

@{
    ViewData["Title"] = "Danh sách loại hàng hóa";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-tags"></i> Danh sách loại hàng hóa</h2>
    <p class="subtitle">Quản lý các loại hàng hóa trong hệ thống</p>
</div>

<div class="card-glass metric-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0 fw-bold">Loại hàng</h5>
            <div class="text-muted small">Tổng số: @Model.Count() loại</div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-modern">
            <i class="bi bi-plus-circle me-2"></i>Thêm mới loại hàng
        </a>
    </div>

    <div class="table-responsive">
        <table class="table-modern table table-hover mb-0">
            <thead>
                <tr>
                    <th class="text-center">Mã loại</th>
                    <th>Tên loại</th>
                    <th class="text-center" width="150">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-primary">@item.MaLoai</span>
                            </td>
                            <td>
                                <i class="bi bi-tag text-muted"></i>
                                <strong>@item.TenLoai</strong>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.MaLoai" 
                                       class="btn btn-sm btn-warning btn-animated" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaLoai" 
                                       class="btn btn-sm btn-danger btn-animated" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa loại hàng @item.TenLoai không?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-3">Chưa có loại hàng nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
