@model IEnumerable<QLKhoHang.Models.LoaiHang>

@{
    ViewData["Title"] = "Danh sách loại hàng hóa";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới loại hàng hóa</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>MaLoai</th>
            <th>TenLoai</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLoai</td>
                <td>@item.TenLoai</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaLoai" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaLoai" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
