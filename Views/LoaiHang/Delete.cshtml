@model QLKhoHang.Models.LoaiHang

@{
    ViewData["Title"] = "Xóa loại hàng";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa loại hàng này không?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Mã loại</dt>
        <dd class="col-sm-10">@Model.MaLoai</dd>

        <dt class="col-sm-2">Tên loại</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLoai" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
