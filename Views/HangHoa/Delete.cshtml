@model QLKhoHang.Models.ViewModels.HangHoaBaseViewModel

@{
    ViewBag.Title = "Xóa hàng hóa";
}

<div class="container mt-4">

    <h3>Xác nhận xóa</h3>

    <div class="alert alert-danger mt-3">
        Bạn có chắc muốn xóa hàng hóa <strong>@Model.TenHang</strong> (Mã: @Model.MaHang)?
    </div>

    <form method="post">
        <button class="btn btn-danger">Xóa</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    </form>

</div>
