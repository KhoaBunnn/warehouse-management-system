@model IEnumerable<QLKhoHang.Models.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
}

<div class="page-header fade-in">
    <h2><i class="bi bi-box"></i> Danh sách hàng hóa</h2>
    <p class="subtitle">Quản lý sản phẩm, tồn kho và giá cả</p>
</div>

<div class="card-glass metric-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0 fw-bold">Hàng hóa</h5>
            <div class="text-muted small">Tổng số: @Model.Count() sản phẩm</div>
        </div>
        <div class="d-flex align-items-center gap-2">
            <form method="get" class="d-flex align-items-center gap-2">
                <input name="q" value="@ViewBag.SearchString" 
                       class="form-control form-control-sm" 
                       style="width:220px" 
                       placeholder="Tìm mã / tên..." />
                <button class="btn btn-outline-secondary btn-sm btn-animated" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
            <a href="@Url.Action("Create")" class="btn btn-primary btn-modern">
                <i class="bi bi-plus-lg me-2"></i>Thêm mới
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table-modern table table-hover mb-0">
            <thead>
                <tr>
                    <th class="text-center">Mã</th>
                    <th>Tên hàng</th>
                    <th>Loại</th>
                    <th>Kho</th>
                    <th class="text-end">Tồn</th>
                    <th class="text-end">Giá nhập</th>
                    <th class="text-end">Giá xuất</th>
                    <th class="text-center" width="120">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        var low = (item.SoLuongTon <= 10);
                        <tr class="@(low ? "table-warning" : "")"
                            onclick="window.location='@Url.Action("Details", new { id = item.MaHang })'"
                            style="cursor: pointer;">
                            <td class="text-center">
                                <span class="badge bg-primary">@item.MaHang</span>
                            </td>
                            <td>
                                <div class="fw-semibold">@item.TenHang</div>
                                <div class="text-muted small">@item.DonViTinh</div>
                            </td>
                            <td>
                                <i class="bi bi-tag text-muted"></i>
                                @item.LoaiHang?.TenLoai
                            </td>
                            <td>
                                <i class="bi bi-box-seam text-muted"></i>
                                @item.Kho?.TenKho
                            </td>
                            <td class="text-end">
                                @item.SoLuongTon
                                @if (item.SoLuongTon == 0)
                                {
                                    <span class="badge bg-danger ms-2">Hết</span>
                                }
                                else if (item.SoLuongTon <= 10)
                                {
                                    <span class="badge bg-warning text-dark ms-2">Sắp hết</span>
                                }
                            </td>
                            <td class="text-end">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", item.GiaNhap) ₫</td>
                            <td class="text-end">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", item.GiaXuat) ₫</td>
                            <td class="text-center" onclick="event.stopPropagation();">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-warning btn-animated" 
                                       href="@Url.Action("Edit", new { id = item.MaHang })" 
                                       title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger btn-animated" 
                                       href="@Url.Action("Delete", new { id = item.MaHang })" 
                                       title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-3">Không tìm thấy kết quả nào</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
