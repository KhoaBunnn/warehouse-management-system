@model IEnumerable<QLKhoHang.Models.PhieuXuat>

<h2>Danh sách Phiếu Xuất</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Tạo Phiếu Xuất</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã PX</th>
            <th>Ngày xuất</th>
            <th>Nhân viên</th>
            <th>Khách hàng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var px in Model)
        {
            <tr>
                <td>@px.MaPX</td>
                <td>@px.NgayXuat.ToString("dd/MM/yyyy")</td>
                <td>@px.NhanVien?.TenNV</td>
                <td>@px.KhachHang?.TenKH</td>
                <td>
                    <a asp-action="Details" asp-route-id="@px.MaPX" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@px.MaPX" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
