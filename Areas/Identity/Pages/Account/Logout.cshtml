@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg,#2b9edb,#00bfa6);
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logout-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        padding: 40px;
        max-width: 500px;
        width: 100%;
        text-align: center;
    }

    .logout-card h2 {
        font-weight: 700;
        margin-bottom: 24px;
        color: #073047;
    }

    .logout-card p {
        color: #6c757d;
        margin-bottom: 30px;
    }

    .btn-logout {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
        transition: transform 0.2s;
    }

    .btn-logout:hover {
        transform: translateY(-2px);
    }

    .btn-cancel {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
    }
</style>

<div class="logout-card">
    <h2>@ViewData["Title"]</h2>
    <p>Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?</p>
    
    <form method="post" class="d-inline">
        <button type="submit" class="btn btn-danger btn-logout">Đăng xuất</button>
    </form>
    
    <a href="~/" class="btn btn-secondary btn-cancel">Hủy</a>
</div>

